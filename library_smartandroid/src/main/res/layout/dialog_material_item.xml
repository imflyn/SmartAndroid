<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ripple="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="48dip"
              android:background="@null"
              android:paddingLeft="24dip"
              android:paddingRight="16dip"
    >

    <com.flyn.smartandroid.views.RippleView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        ripple:rv_color="@color/material_blue_300"
        ripple:rv_rippleDuration="300"
        ripple:rv_type="simpleRipple">

        <Button
            android:id="@+id/btn_material_item"
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:textColor="@color/material_blue_500"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </com.flyn.smartandroid.views.RippleView>

</LinearLayout>